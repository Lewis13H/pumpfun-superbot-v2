# Database
DATABASE_URL=postgresql://pump_user:password@localhost:5433/pump_monitor

# Shyft API (Required)
SHYFT_API_KEY=your-shyft-api-key
SHYFT_GRPC_ENDPOINT=grpc.shyft.to
SHYFT_GRPC_TOKEN=your-grpc-token
# ✅ Added: RPC URL for Shyft (optional, will use API key if not set)
SHYFT_RPC_URL=https://rpc.shyft.to?api_key=your-shyft-api-key

# Server Ports
WS_PORT=8080
WEB_PORT=3000

# Monitoring Configuration
FLUSH_INTERVAL=10000      # Buffer flush interval (ms)
ARCHIVE_THRESHOLD=15000   # Archive tokens below this market cap
BATCH_SIZE=50            # Max updates per batch

# API Rate Limiting
SHYFT_RATE_LIMIT=2       # Requests per second
METADATA_RETRY_DELAY=5000 # Delay between retries (ms)
METADATA_MAX_RETRIES=3    # Max retry attempts

# ✅ Price Refresh Configuration (New)
PRICE_REFRESH_ENABLED=true              # Enable/disable price refresh
PRICE_REFRESH_INTERVAL=60000            # Refresh interval (ms) - 1 minute
PRICE_REFRESH_BATCH_SIZE=20             # Tokens per batch
PRICE_REFRESH_MAX_CONCURRENT=5          # Max concurrent requests
PRICE_REFRESH_RPC_URL=                  # Custom RPC URL (optional)
USE_SHYFT_RPC=true                      # Use Shyft RPC instead of public RPC