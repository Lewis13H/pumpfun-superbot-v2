
// ===== .env.example - Updated for V2.1 =====
# Database
DATABASE_URL=postgresql://pump_user:password@localhost:5433/pump_monitor
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Shyft API
SHYFT_API_KEY=your-shyft-api-key
SHYFT_GRPC_ENDPOINT=grpc.shyft.to
SHYFT_GRPC_TOKEN=your-grpc-token
PUMP_PROGRAM_ID=6EF8rrecthR5Dkzon8Nwu78hRvfCKubJ14M5uBEwF6P

# Server Ports
WS_PORT=8080
WEB_PORT=3000
METRICS_PORT=9090

# Monitoring
FLUSH_INTERVAL=10000
ARCHIVE_THRESHOLD=15000
BATCH_SIZE=50
KNOWN_TOKENS_REFRESH=300000
SOL_PRICE_UPDATE=30000

# Rate Limiting
SHYFT_RATE_LIMIT=1
SHYFT_RATE_WINDOW=1000
PUMP_FUN_RATE_LIMIT=1
PUMP_FUN_RATE_WINDOW=1000
METADATA_RETRY_DELAY=10000
METADATA_MAX_RETRIES=3
METADATA_BACKOFF_MULTIPLIER=2

# Caching
TOKEN_METADATA_TTL=3600
PRICE_CACHE_TTL=60
ANALYTICS_CACHE_TTL=300

# Circuit Breaker
CIRCUIT_FAILURE_THRESHOLD=3
CIRCUIT_RESET_TIMEOUT=60000

# V2.1 Scoring (disabled by default)
SCORING_ENABLED=false
SCORE_UPDATE_INTERVAL=300000

# Score Weights (must sum to 1.0)
SCORE_WEIGHT_TECHNICAL=0.4
SCORE_WEIGHT_HOLDER=0.3
SCORE_WEIGHT_SOCIAL=0.2
SCORE_WEIGHT_RISK=0.1

# Score Thresholds
MIN_SCORE_THRESHOLD=400
HIGH_SCORE_THRESHOLD=800
MIN_PROGRESS=10
MIN_HOLDERS=50
MAX_CONCENTRATION=60
SUSPICIOUS_WALLET_RATIO=0.3
MIN_MARKET_CAP=10000
MAX_MARKET_CAP=10000000

# External APIs (optional)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_TIMEOUT=5000

# Twitter API (optional - for V2.1)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Birdeye API (optional - for V2.1)
BIRDEYE_API_KEY=

# Helius API (optional - for V2.1)
HELIUS_API_KEY=

# Performance
MAX_PRICE_BUFFER_SIZE=1000
MAX_TOKEN_CACHE_SIZE=10000
CLEANUP_INTERVAL=3600000
MAX_MEMORY_MB=512
GC_INTERVAL=300000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_SLOW_QUERIES=false
SLOW_QUERY_MS=1000
METRICS_ENABLED=false

# Safety
MAX_REASONABLE_MCAP=10000000
GRADUATION_TARGET_SOL=85
MIN_BONDING_CURVE_LENGTH=32
BLOCK_SYSTEM_ACCOUNTS=true

# Development
NODE_ENV=development
MOCK_GRPC=false
MOCK_DATABASE=false
SEED_DATA=false
VERBOSE_LOGGING=false


# Feature Flags (all default to true)
TRACK_FAILED_TXS=true
TRACK_BALANCE_CHANGES=true
DETECT_BOT_ACTIVITY=true
DETECT_MEV=true
CALCULATE_SLIPPAGE=true
TRACK_INNER_INSTRUCTIONS=true

# Analysis Thresholds
WASH_TRADE_THRESHOLD=1000
BOT_NETWORK_MIN_SIZE=3
HIGH_FREQUENCY_THRESHOLD=10
SLIPPAGE_WARNING_THRESHOLD=5
PRICE_IMPACT_WARNING_THRESHOLD=10
LARGE_MOVEMENT_THRESHOLD=10
FLOW_ANALYZER_MAX_FLOWS=1000