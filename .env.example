# Database
DATABASE_URL=

# Shyft gRPC Configuration
SHYFT_GRPC_ENDPOINT=https://grpc.shyft.to
SHYFT_GRPC_TOKEN=your-token-here

# Shyft API
SHYFT_API_KEY=your-api-key-here
SHYFT_RPC_URL=https://rpc.shyft.to?api_key=your-api-key-here
# Helius API
HELIUS_API_KEY=your-helius-api-key-here

# RPC Endpoint (optional - defaults to Helius if HELIUS_API_KEY is set)
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-helius-api-key-here

# Connection Pool Configuration
POOL_MAX_CONNECTIONS=3
POOL_MIN_CONNECTIONS=2
POOL_HEALTH_CHECK_INTERVAL=30000
POOL_CONNECTION_TIMEOUT=10000
POOL_MAX_RETRIES=3

# Token Thresholds
BC_SAVE_THRESHOLD=8888
AMM_SAVE_THRESHOLD=1000

# Holder Analysis Thresholds
HOLDER_ANALYSIS_MARKET_CAP_THRESHOLD=18888
HOLDER_ANALYSIS_SOL_THRESHOLD=125
HOLDER_ANALYSIS_MAX_CONCURRENT=3
HOLDER_ANALYSIS_INTERVAL_HOURS=6
HOLDER_ANALYSIS_AUTO_ENABLED=true

# Parser Configuration
# Set to false to use legacy AMM parsers (6 strategies instead of 2)
USE_CONSOLIDATED_PARSERS=true

# Fault Tolerance
FAULT_TOLERANCE_ENABLED=true

# Smart Streaming (connection pooling)
USE_SMART_STREAMING=false