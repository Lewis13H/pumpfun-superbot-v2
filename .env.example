
# Pump.fun Superbot V2 - Minimal Environment Configuration

# Database Connection (Required)
DATABASE_URL=postgresql://pump_user:password@localhost:5433/pump_monitor

# Shyft API Credentials (Required)
SHYFT_API_KEY=
SHYFT_GRPC_ENDPOINT=grpc.ams.shyft.to
SHYFT_GRPC_TOKEN=
PUMP_PROGRAM_ID=

# Server Configuration
WS_PORT=8080         # WebSocket server port for dashboard
WEB_PORT=3000        # HTTP server port for web interface

# Monitoring Settings
FLUSH_INTERVAL=10000      # How often to flush price updates to DB (milliseconds)
ARCHIVE_THRESHOLD=15000   # Market cap threshold for archiving tokens (USD)
BATCH_SIZE=50            # Maximum updates per database batch

# API Rate Limiting
SHYFT_RATE_LIMIT=2          # Max requests per second to Shyft API
METADATA_RETRY_DELAY=5000   # Delay between metadata fetch retries (milliseconds)
METADATA_MAX_RETRIES=3      # Maximum retry attempts for failed metadata fetches

# External APIs (optional)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_TIMEOUT=5000

# Twitter API (optional - for V2.1)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Birdeye API (optional - for V2.1)
BIRDEYE_API_KEY=

# Helius API (optional - for V2.1)
HELIUS_API_KEY=

# Price Refresh Service
PRICE_REFRESH_ENABLED=true
PRICE_REFRESH_INTERVAL=60000      # Refresh interval in ms
PRICE_REFRESH_BATCH_SIZE=20       # Tokens per batch
PRICE_REFRESH_MAX_CONCURRENT=5    # Max concurrent RPC calls
PRICE_REFRESH_USE_SHYFT_RPC=true  # Use Shyft RPC (recommended)
PRICE_REFRESH_RPC_URL=             # Custom RPC (if not using Shyft)